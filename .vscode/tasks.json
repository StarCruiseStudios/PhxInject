{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docfx: restore tool",
      "type": "shell",
      "command": "dotnet",
      "options": {
        "env": {
          "BlueShellQuietMode": "true"
        }
      },
      "args": [
        "tool",
        "restore"
      ],
      "problemMatcher": []
    },
    {
      "label": "docfx: build plugin",
      "type": "shell",
      "command": "dotnet",
      "options": {
        "env": {
          "BlueShellQuietMode": "true"
        }
      },
      "args": [
        "build",
        "./Documentation/plugins/PhxInject-DocFx-Plugin/PhxInject.DocFx.Plugins.csproj",
        "-c",
        "Release"
      ],
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "docfx: metadata",
      "type": "shell",
      "command": "dotnet",
      "options": {
        "env": {
          "BlueShellQuietMode": "true"
        }
      },
      "args": [
        "docfx",
        "metadata",
        "./Documentation/docfx.json"
      ],
      "problemMatcher": []
    },
    {
      "label": "docfx: build",
      "type": "shell",
      "command": "dotnet",
      "options": {
        "env": {
          "BlueShellQuietMode": "true"
        }
      },
      "args": [
        "docfx",
        "build",
        "./Documentation/docfx.json"
      ],
      "dependsOrder": "sequence",
      "dependsOn": [
        "docfx: metadata"
      ],
      "problemMatcher": []
    },
    {
      "label": "docfx: full build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "docfx: restore tool",
        "docfx: build plugin",
        "docfx: build"
      ],
      "problemMatcher": []
    }
  ]
}
